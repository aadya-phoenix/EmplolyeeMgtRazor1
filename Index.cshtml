@page
@model EmployeeMgt.Pages.EmployeeList.IndexModel

    <br />
    <div class="container row p-0 m-0" >
        <div class="col-9">
            <h2 class="text-info">Employee List</h2>
        </div>
        <div class="col-3">
            <a asp-page="Create" class="btn btn-info form-control text-white"  > Create New Employee</a>
        </div>

        <div class="col-12 border p-3 m-3" >
            <form  method="post">
                @if (Model.Employees.Count() > 0)
                {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Employees.FirstOrDefault().Id"></label>
                        </th>

                        <th>
                            <label asp-for="Employees.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Employees.FirstOrDefault().Mobile"></label>
                        </th>

                        <th>

                        </th>
                    </tr>   
                    @foreach (var item in Model.Employees)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Mobile)
                    </td>
                    <td>
                        <button class="btn btn-danger btn-sm">Delete</button>
                        <a class="btn btn-success btn-sm text-white">Edit</a>
                    </td>
                </tr>
            }
                </table>
                }
                else
                {
                   <p>No Books Available </p>
                }
            </form>
        </div>
    </div>


